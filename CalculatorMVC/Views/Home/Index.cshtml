@model Operation

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Simple Calculator</h2>
        <form asp-controller="Home" asp-action="Index" method="post">
            <div class="mb-3">
                <label asp-for="NumberA" class="form-label">Number A</label>
                <input type="number" class="form-control" asp-for="NumberA" placeholder="Enter first number" />
            </div>
            <div class="mb-3">
                <label asp-for="NumberB" class="form-label">Number B</label>
                <input type="number" class="form-control" asp-for="NumberB" placeholder="Enter second number" />
            </div>
            <div class="mb-3">
                <label asp-for="OperationType" class="form-label">Operation</label>
                <select class="form-select" asp-for="OperationType" asp-items="Html.GetEnumSelectList<OperationType>()">
                    <option selected value="">Select operation</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Result" class="form-label">Result</label>
                <input type="number" class="form-control" asp-for="Result" disabled />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">Calculate</button>
            </div>
        </form>
    </div>
</div>
